{
  "compilerOptions": {
    "incremental": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "dom",
      "es2020"
    ],
    "declaration": true,
    "declarationDir": ".types",
    "outDir": "js",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./types/**"
  ]
}